<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bonkkers</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/garden.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" />
   
   
    

</head>
<body onload="applySavedMode()">
    <div id="contentWrapper" class="content-hidden">
        <header>
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-transparent border-bottom box-shadow mb-3">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="order-lg-1">
                            <a class="navbar-brand fs-1" asp-area="" asp-page="/Index">Bonkkers</a>
                        </div>
                        <div class="order-lg-2">
                            <div id="dark" class="form-check form-switch fs-5 d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" id="darkModeToggle" onclick="toggleDarkMode()">
                                <label class="form-check-label" for="darkModeToggle">
                                    <span id="darkModeText" class="text-white"></span>
                                    <span id="darkModeIcon" class="fas fa-sun" style=" margin-left:20%; margin-top:40%;"></span>
                                </label>
                            </div>
                        </div>
                        <div class="order-lg-3">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse justify-content-end">
                        <ul class="navbar-nav fs-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy">Gallery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Clients/Index">Clients</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="adjust-margin">
            <h2 class="text-white">Socials</h2>

            <!-- Linkedin -->
            <a class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="https://www.linkedin.com/in/teemu-kalmari-755469169/" role="button" target="_blank"><i class="fa fa-linkedin"></i></a>
            <!-- Github -->
            <a class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="https://github.com/temez26" role="button" target="_blank"><i class="fa fa-github"></i></a>
        </div>
        <div>
            
            <h1 class="main-name">Gardening</h1>
            <p class="">Tips for professionals and hobbyists</p>
        </div>




        <div class=""  >
            <p class="footer-font" style=" text-align:left; margin-left:2%; ">
                &copy; Copyright Gardening Group. All rights reserved.
            </p>
        </div>
       
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>