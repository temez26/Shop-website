<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>@ViewData["Title"] - Bonkkers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Marck+Script|Raleway:300,400,600,700|Roboto:300,400,700"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
   
    

</head>
<body onload="applySavedMode()">
    <div id="contentWrapper" class="content-hidden">
        <header>
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-transparent border-bottom box-shadow mb-3">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="order-lg-1">
                            <a class="navbar-brand fs-1" asp-area="" asp-page="/Index">Bonkkers</a>
                        </div>
                        <div class="order-lg-2">
                            <div id="dark" class="form-check form-switch fs-5 d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" id="darkModeToggle" onclick="toggleDarkMode()">
                                <label class="form-check-label" for="darkModeToggle">
                                    <span id="darkModeText" class="text-white"></span>
                                    <span id="darkModeIcon" class="fas fa-sun" style=" margin-left:20%; margin-top:40%;"></span>
                                </label>
                            </div>
                        </div>
                        <div class="order-lg-3">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse justify-content-end">
                        <ul class="navbar-nav fs-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Clients/Index">Info</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>


    <div class="container1">
        <div class="header position-relative">
            <div id="headerCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" style="margin-top: 10%;">
                        
                        <h1 class="main-heading">Welcome</h1>
                        <h3 class="sub-heading">To the world of gardening</h3>
                    </div>
                    <div class="carousel-item" style="margin-top: 10%;">
                        <h1 class="main-heading">Discover</h1>
                        <h3 class="sub-heading">The secrets of successful gardening</h3>
                    </div>
                    <div class="carousel-item" style="margin-top: 10%;">
                        <h1 class="main-heading">Join us</h1>
                        <h3 class="sub-heading">For expert gardening advice and more</h3>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#headerCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#headerCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div  class="super">
                
                    <h1 class="main-name">Gardening</h1>
                    <p class="sub-name">Tips for professionals and hobbyists</p>
                    <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" style="background-color: red;
    border-radius: 3px; opacity:0.8;">
                        Click here to join
                    </button>
                    </div>
                
            </div>
        </div>
    </div>
<div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="adjust-margin">
            <h2 class="text-white">Socials</h2>

            <!-- Linkedin -->
            <a class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="https://www.linkedin.com/in/teemu-kalmari-755469169/" role="button" target="_blank"><i class="fa fa-linkedin"></i></a>
            <!-- Github -->
            <a class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="https://github.com/temez26" role="button" target="_blank"><i class="fa fa-github"></i></a>
        </div>
        <div>

            <h1 class="main-name">Gardening</h1>
            <p class="text-adjust">Tips for professionals and hobbyists</p>
        </div>




        <div class="">
            <p class="footer-font" style=" text-align:left; margin-left:2%; ">
                &copy; Copyright Teemu Kalmari. All rights reserved.
            </p>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>